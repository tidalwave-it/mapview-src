<site xmlns="http://maven.apache.org/SITE/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://maven.apache.org/SITE/2.0.0 https://maven.apache.org/xsd/site-2.0.0.xsd">
    <bannerLeft name="${project.name}" href="https://tidalwave.it">
        <image src="http://tidalwave.it/media/Tidalwave%20Logo.png" />
    </bannerLeft>

    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>${tft.maven-fluido-skin.version}</version>
    </skin>

    <custom>
        <fluidoSkin>
            <topBarEnabled>true</topBarEnabled>
            <sideBarEnabled>false</sideBarEnabled>
            <topBarContainerStyle>width: 90%;</topBarContainerStyle>
            <googleSearch>
                <sitesearch>${project.url}</sitesearch>
            </googleSearch>
            <gitHub>
                <projectId>tidalwave-it/mapview-src</projectId>
                <ribbonOrientation>right</ribbonOrientation>
                <ribbonColor>gray</ribbonColor>
            </gitHub>
        </fluidoSkin>
    </custom>

    <body>
        <menu ref="reports" inherit="bottom"/>

        <menu name="Overview">
            <item name="Introduction" href="index.html"/>
        </menu>
    </body>
</site>
